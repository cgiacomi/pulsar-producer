; https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[{*.ts,*.js}]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false
eclint_indent_style = unset

[{Dockerfile,*.json}]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0
